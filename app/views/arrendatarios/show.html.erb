<%- model_class = Arrendatario -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:nombre) %></dt>
      <dd><pre class="prettyprint"><%= @arrendatario.nombre %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:rut) %></dt>
      <dd><pre class="prettyprint"><%= @arrendatario.rut %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:telefono) %></dt>
      <dd><pre class="prettyprint"><%= @arrendatario.telefono %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:mail) %></dt>
      <dd><pre class="prettyprint"><%= @arrendatario.mail %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:password_digest) %></dt>
      <dd><pre class="prettyprint"><%= @arrendatario.password_digest %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', default: t("helpers.links.back")),
              arrendatarios_path, class: 'btn btn-default'  %>
  <%= link_to t('.edit', default: t("helpers.links.edit")),
              edit_arrendatario_path(@arrendatario), class: 'btn btn-default' %>
  <%= link_to t('.destroy', default: t("helpers.links.destroy")),
              arrendatario_path(@arrendatario),
              method: 'delete',
              data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
              class: 'btn btn-danger' %>
</div>