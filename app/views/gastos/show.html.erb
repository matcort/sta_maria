<%- model_class = Gasto -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:tipo) %></dt>
      <dd><pre class="prettyprint"><%= @gasto.tipo %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:nombre) %></dt>
      <dd><pre class="prettyprint"><%= @gasto.nombre %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:comentario) %></dt>
      <dd><pre class="prettyprint"><%= @gasto.comentario %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:local_id) %></dt>
      <dd><pre class="prettyprint"><%= @gasto.local_id %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:factura_id) %></dt>
      <dd><pre class="prettyprint"><%= @gasto.factura_id %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', default: t("helpers.links.back")),
              gastos_path, class: 'btn btn-default'  %>
  <%= link_to t('.edit', default: t("helpers.links.edit")),
              edit_gasto_path(@gasto), class: 'btn btn-default' %>
  <%= link_to t('.destroy', default: t("helpers.links.destroy")),
              gasto_path(@gasto),
              method: 'delete',
              data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
              class: 'btn btn-danger' %>
</div>