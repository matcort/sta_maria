<%- model_class = Contrato -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:fechaInicio) %></dt>
      <dd><pre class="prettyprint"><%= @contrato.fechaInicio %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:fechaFin) %></dt>
      <dd><pre class="prettyprint"><%= @contrato.fechaFin %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:montoArriendo) %></dt>
      <dd><pre class="prettyprint"><%= @contrato.montoArriendo %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:documento) %></dt>
      <dd><pre class="prettyprint"><%= @contrato.documento %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:estado) %></dt>
      <dd><pre class="prettyprint"><%= @contrato.estado %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:arrendatario_id) %></dt>
      <dd><pre class="prettyprint"><%= @contrato.arrendatario.nombre %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:administrador_id) %></dt>
      <dd><pre class="prettyprint"><%= @contrato.administrador.nombre %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:local_id) %></dt>
      <dd><pre class="prettyprint"><%= @contrato.local.numero %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', default: t("helpers.links.back")),
              local_contratos_path, class: 'btn btn-default'  %>
  <%= link_to t('.edit', default: t("helpers.links.edit")),
              edit_local_contrato_path(@local, @contrato), class: 'btn btn-default' %>
  <%= link_to "Eliminar Contrato",
              local_contrato_path(@local, @contrato),
              method: 'delete',
              data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
              class: 'btn btn-danger' %>
</div>