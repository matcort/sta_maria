<%- model_class = Contrato -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:fechaInicio) %></th>
      <th><%= model_class.human_attribute_name(:fechaFin) %></th>
      <th><%= model_class.human_attribute_name(:montoArriendo) %></th>
      <th><%= model_class.human_attribute_name(:documento) %></th>
      <th><%= model_class.human_attribute_name(:estado) %></th>
      <th><%= model_class.human_attribute_name(:arrendatario_id) %></th>
      <th><%= model_class.human_attribute_name(:administrador_id) %></th>
      <th><%= model_class.human_attribute_name(:local_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', default: t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @contratos.each do |contrato| %>
      <tr>
        <td><%= contrato.id %></td>
          <td><%= contrato.fechaInicio %></td>
          <td><%= contrato.fechaFin %></td>
          <td><%= contrato.montoArriendo %></td>
          <td><%= contrato.documento %></td>
          <td><%= contrato.estado %></td>
          <td><%= contrato.arrendatario_id %></td>
          <td><%= contrato.administrador_id %></td>
          <td><%= contrato.local_id %></td>
        <td><%=l contrato.created_at, format: :long %></td>
        <td>
          <%= link_to contrato_path(contrato), class: 'btn btn-xs', title: "#{ t('.show', default: t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
          <%- end -%>
          <%= link_to edit_contrato_path(contrato), class: 'btn btn-xs', title: "#{ t('.edit', default: t('helpers.links.edit')) }" do %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to contrato_path(contrato), method: :delete, data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-xs', title: "#{ t('.destroy', default: t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', default: t("helpers.links.new")),
            new_contrato_path,
            class: 'btn btn-primary' %>
