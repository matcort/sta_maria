<%= form_for @local, html: { class: 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :direccion, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :direccion, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :numero, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :numero, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :comentarios, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :comentarios, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :estadoArriendo, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :estadoArriendo, class: 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                  locals_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
