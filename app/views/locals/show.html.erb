<%- model_class = Local -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human.titleize %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:direccion) %></dt>
      <dd><pre class="prettyprint"><%= @local.direccion %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:numero) %></dt>
      <dd><pre class="prettyprint"><%= @local.numero %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:comentarios) %></dt>
      <dd><pre class="prettyprint"><%= @local.comentarios %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:estadoArriendo) %></dt>
      <dd><pre class="prettyprint"><%= @local.estadoArriendo %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', default: t("helpers.links.back")),
              locals_path, class: 'btn btn-default'  %>
  <%= link_to t('.edit', default: t("helpers.links.edit")),
              edit_local_path(@local), class: 'btn btn-default' %>
  <%= link_to t('.destroy', default: t("helpers.links.destroy")),
              local_path(@local),
              method: 'delete',
              data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
              class: 'btn btn-danger' %>
</div>